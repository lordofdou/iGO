	<div id="admin_table" class="panel panel-default">
  		<!-- Default panel contents -->
  		<div class="panel-heading">
  			<h1 class="panel-title">管理员管理</h1>
  		</div>

  		<!-- Table -->
  		<table class="table" id="table">
  		<tr>
  			<td>姓名</td><td>最后登录时间</td><td>权限管理</td><td>人员管理</td>
  		</tr>
  		<% for (var i = 0; i < data.length; i++) {%>
  			<tr>
  			<td><%= data[i].name %></td>
  			<td><%= data[i].lastLoginTime %></td>
  			<% if(data[i].canLogin) { %>
  			<%	icon = "glyphicon-remove"; %>
  			<% }else{ %>
  			<%  icon = "glyphicon-ok"%>
  			<% } %>
  			<td><button class="btn btn-default" onclick="canLogin(<%= data[i].id %>,<%= data[i].canLogin %>)"><span class="glyphicon <%= icon %>" aria-hidden="true"></span></button></td>
  			<td><button class="btn btn-default" onclick="d(<%= data[i].id %>)">删除</button></td>
  			</tr>
  		<% } %>
